<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bodzio.doctorapp.MainActivity">


    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

    <EditText
        android:id="@+id/surnameFiltrField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nazwisko"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/peselFiltrField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pesel"
        android:inputType="number" />

    <Button
        android:id="@+id/filtrButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtruj"
        android:onClick="addPatient"/>

    <Button
        android:id="@+id/addBuuton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dodaj" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>


